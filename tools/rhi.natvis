<?xml version="1.0" encoding="utf-8"?>

<AutoVisualizer xmlns="http://schemas.microsoft.com/vstudio/debugger/natvis/2010">

    <Type Name="rhi::static_vector&lt;*,*&gt;">
        <DisplayString>{{ size={current_size} }}</DisplayString>
        <Expand>
            <ArrayItems>
                <Size>current_size</Size>
                <ValuePointer>_Elems</ValuePointer>
            </ArrayItems>
        </Expand>
    </Type>

    <Type Name="rhi::RefCountPtr&lt;*&gt;">
        <DisplayString Condition="ptr_ == 0">empty</DisplayString>
        <DisplayString>{*ptr_}</DisplayString>
        <Expand>
            <ExpandedItem>ptr_</ExpandedItem>
        </Expand>
    </Type>

    <Type Name="rhi::BindingLayoutItem">
        <DisplayString Condition="type == rhi::ResourceType::Texture_SRV || type == rhi::ResourceType::TypedBuffer_SRV || type == rhi::ResourceType::StructuredBuffer_SRV || type == rhi::ResourceType::RawBuffer_SRV || type == rhi::ResourceType::RayTracingAccelStruct">
            t{slot}: {type}
        </DisplayString>
        <DisplayString Condition="type == rhi::ResourceType::Texture_UAV || type == rhi::ResourceType::TypedBuffer_UAV || type == rhi::ResourceType::StructuredBuffer_UAV || type == rhi::ResourceType::RawBuffer_UAV">
            u{slot}: {type}
        </DisplayString>
        <DisplayString Condition="type == rhi::ResourceType::ConstantBuffer || type == rhi::ResourceType::VolatileConstantBuffer">
            b{slot}: {type}
        </DisplayString>
        <DisplayString Condition="type == rhi::ResourceType::PushConstants">
            b{slot}: {type} size={size}
        </DisplayString>
        <DisplayString Condition="type == rhi::ResourceType::Sampler">
            s{slot}: {type}
        </DisplayString>
        <DisplayString>[{slot}] {type}</DisplayString>
    </Type>

    <Type Name="rhi::BindingLayoutDesc">
        <DisplayString>{{ size={bindings.current_size} }}</DisplayString>
        <Expand>
            <Item Name="visibility">visibility</Item>
            <Item Name="registerSpace">registerSpace</Item>
            <Item Name="bindingOffsets">bindingOffsets</Item>
            <ArrayItems>
                <Size>bindings.current_size</Size>
                <ValuePointer>bindings._Elems</ValuePointer>
            </ArrayItems>
        </Expand>
    </Type>

    <Type Name="rhi::BindingSetItem">
        <DisplayString Condition="type == rhi::ResourceType::Texture_SRV || type == rhi::ResourceType::TypedBuffer_SRV || type == rhi::ResourceType::StructuredBuffer_SRV || type == rhi::ResourceType::RawBuffer_SRV || type == rhi::ResourceType::RayTracingAccelStruct">
            t{slot}: {type} {*resourceHandle}
        </DisplayString>
        <DisplayString Condition="type == rhi::ResourceType::Texture_UAV || type == rhi::ResourceType::TypedBuffer_UAV || type == rhi::ResourceType::StructuredBuffer_UAV || type == rhi::ResourceType::RawBuffer_UAV">
            u{slot}: {type} {*resourceHandle}
        </DisplayString>
        <DisplayString Condition="type == rhi::ResourceType::ConstantBuffer || type == rhi::ResourceType::VolatileConstantBuffer">
            b{slot}: {type} {*resourceHandle}
        </DisplayString>
        <DisplayString Condition="type == rhi::ResourceType::PushConstants">
            b{slot}: {type} size={range.byteSize}
        </DisplayString>
        <DisplayString Condition="type == rhi::ResourceType::Sampler">
            s{slot}: {type} {*resourceHandle}
        </DisplayString>
        <DisplayString>[{slot}]: {type} {*resourceHandle}</DisplayString>
        <Expand>
            <Item Name="resource">resourceHandle</Item>
            <Item Name="type">type</Item>
            <Item Name="slot">slot</Item>
            <Item Name="format" Condition="type == rhi::ResourceType::Texture_SRV || type == rhi::ResourceType::Texture_UAV || type == rhi::ResourceType::TypedBuffer_SRV || type == rhi::ResourceType::TypedBuffer_UAV">format</Item>
            <Item Name="subresources" Condition="type == rhi::ResourceType::Texture_SRV || type == rhi::ResourceType::Texture_UAV">subresources</Item>
            <Item Name="dimension" Condition="type == rhi::ResourceType::Texture_SRV || type == rhi::ResourceType::Texture_UAV">dimension</Item>
            <Item Name="range" Condition="type == rhi::ResourceType::TypedBuffer_SRV || type == rhi::ResourceType::TypedBuffer_UAV || type == rhi::ResourceType::StructuredBuffer_SRV || type == rhi::ResourceType::StructuredBuffer_UAV || type == rhi::ResourceType::RawBuffer_SRV || type == rhi::ResourceType::RawBuffer_UAV">range</Item>
        </Expand>
    </Type>

    <Type Name="rhi::BindingSetDesc">
        <DisplayString>{{ size={bindings.current_size} }}</DisplayString>
        <Expand>
            <Item Name="trackLiveness">trackLiveness</Item>
            <ArrayItems>
                <Size>bindings.current_size</Size>
                <ValuePointer>bindings._Elems</ValuePointer>
            </ArrayItems>
        </Expand>
    </Type>

    <Type Name="rhi::TextureDesc">
        <DisplayString Condition="dimension == rhi::TextureDimension::Texture1D">
            Texture1D {debugName} Width={width} MipLevels={mipLevels} Format={format}
        </DisplayString>
        <DisplayString Condition="dimension == rhi::TextureDimension::Texture1DArray">
            Texture1DArray {debugName} Width={width} ArraySize={arraySize} MipLevels={mipLevels} Format={format}
        </DisplayString>
        <DisplayString Condition="dimension == rhi::TextureDimension::Texture2D">
            Texture2D {debugName} Size={width}x{height} MipLevels={mipLevels} Format={format}
        </DisplayString>
        <DisplayString Condition="dimension == rhi::TextureDimension::Texture2DArray">
            Texture2DArray {debugName} Width={width} ArraySize={arraySize} MipLevels={mipLevels} Format={format}
        </DisplayString>
        <DisplayString Condition="dimension == rhi::TextureDimension::TextureCube">
            TextureCube {debugName} Size={width}x{height} MipLevels={mipLevels} Format={format}
        </DisplayString>
        <DisplayString Condition="dimension == rhi::TextureDimension::TextureCubeArray">
            TextureCubeArray {debugName} Width={width} ArraySize={arraySize} MipLevels={mipLevels} Format={format}
        </DisplayString>
        <DisplayString Condition="dimension == rhi::TextureDimension::Texture2DMS">
            Texture2DMS {debugName} Size={width}x{height} SampleCount={sampleCount} Format={format}
        </DisplayString>
        <DisplayString Condition="dimension == rhi::TextureDimension::Texture2DMSArray">
            Texture2DMSArray {debugName} Width={width} ArraySize={arraySize} SampleCount={sampleCount} Format={format}
        </DisplayString>
        <DisplayString Condition="dimension == rhi::TextureDimension::Texture3D">
            Texture3D {debugName} Size={width}x{height}x{depth} MipLevels={mipLevels} Format={format}
        </DisplayString>
        <DisplayString>Unknown TextureDesc</DisplayString>
    </Type>

    <Type Name="rhi::FramebufferInfo">
        <DisplayString>Size={width}x{height} SampleCount={sampleCount} ColorTargets={colorFormats.current_size} DepthTarget={depthFormat != rhi::Format::UNKNOWN}</DisplayString>
    </Type>

    <Type Name="rhi::FramebufferAttachment">
        <DisplayString Condition="!texture">empty</DisplayString>
        <DisplayString>{*texture} Subresources={subresources} Format={format}</DisplayString>
    </Type>

    <Type Name="rhi::FramebufferDesc">
        <DisplayString Condition="depthAttachment.texture">Framebuffer ({colorAttachments.current_size} color target(s), with depth)</DisplayString>
        <DisplayString>Framebuffer ({colorAttachments.current_size} color target(s), no depth)</DisplayString>
        <Expand>
            <Item Name="depth">depthAttachment</Item>
            <ArrayItems>
                <Size>colorAttachments.current_size</Size>
                <ValuePointer>colorAttachments._Elems</ValuePointer>
            </ArrayItems>
        </Expand>
    </Type>

    <Type Name="rhi::HeapDesc">
        <DisplayString>{type} Heap {debugName} Capacity={capacity}</DisplayString>
    </Type>

    <Type Name="rhi::BufferDesc">
        <DisplayString>Buffer {debugName} ByteSize={byteSize} StructStride={structStride} Format={format}</DisplayString>
    </Type>

    <Type Name="rhi::rt::AccelStructDesc">
        <DisplayString Condition="isTopLevel">
            TopLevelAccelStruct {debugName} MaxInstances={topLevelMaxInstances} BuildFlags={buildFlags}
        </DisplayString>
        <DisplayString>
            BottomLevelAccelStruct {debugName} MaxGeometries={bottomLevelGeometries.size()} BuildFlags={buildFlags}
        </DisplayString>
    </Type>

    <Type Name="rhi::ShaderDesc">
        <DisplayString>{shaderType} Shader {debugName}:{entryName}</DisplayString>
    </Type>


